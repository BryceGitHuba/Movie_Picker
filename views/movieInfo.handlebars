<main class="container">
    <div class="grid">
        <div class="center-text">
        <h1>Your Reel Report</h1>
        {{#if loggedIn}}
        <button id="watchlist" value="{{movie.title}}" type="button">Add to Watchlist</button>
        {{else}}
        <p>Please <a href="/login">login</a> to add movie to your watchlist!</p>
        {{/if}}
        </div>
        <article class="center">
            <img src={{movie.poster}} alt="Poster of {{movie.title}}"\>
        </article>
        <article>
            <h2>{{movie.title}}</h2>
            <h3>{{genre}}<br>{{formatDate movie.releaseDate}}<br>{{formatTime movie.runtime}}</h3>
            <p>{{movie.plot}}</p>
        </article>
    </div>
</main>

{{#if loggedIn}}
<script src="/js/watchlist-movie.js"></script>
{{/if}}
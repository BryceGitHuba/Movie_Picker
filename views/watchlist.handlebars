<main class="container">
    <div class="center-text">
        <h1>{{user}}'s Watchlist</h1>
    </div>
    {{#if watchlist}}
        {{#each watchlist}}
        {{> movie}}
        {{/each}}
    {{else}}
        <hgroup>
            <h4 class="center-text">There are no movies on your watchlist. :(</h4>
            <p class="center-text">Please go to the <a href="/">homepage</a> to starting adding movies!</p>
        </hgroup>
    {{/if}}
</main>

<script src="/js/remove-from-watchlist.js"></script>